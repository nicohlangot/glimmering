HeadshotCorner.Parent = Headshot

-- Load user headshot
local success, userId = pcall(function()
	return Players:GetUserIdFromNameAsync("Nicohcarl123")
end)

if success and userId then
	local thumbType = Enum.ThumbnailType.HeadShot
	local thumbSize = Enum.ThumbnailSize.Size100x100
	local content, isReady = Players:GetUserThumbnailAsync(userId, thumbType, thumbSize)
	Headshot.Image = content
else
	Headshot.Image = "rbxassetid://0"
end

-- Fake Detection Function
local function CheckIfDisabled()
	-- Replace with real logic
	return false
end

-- Click Counter
local clickCount = 0
local cooldown = false

-- Okay Button Logic
OkayButton.MouseButton1Click:Connect(function()
	if cooldown then return end
	
	clickCount += 1
	print("Okay button clicked " .. clickCount .. " times")
	
	-- Button Click Animation
	local tweenDown = TweenService:Create(OkayButton, TweenInfo.new(0.1), {Size = UDim2.new(0, 190, 0, 45)})
	local tweenUp = TweenService:Create(OkayButton, TweenInfo.new(0.1), {Size = UDim2.new(0, 200, 0, 50)})
	tweenDown:Play()
	tweenDown.Completed:Wait()
	tweenUp:Play()
	
	-- 7 clicks → cooldown
	if clickCount >= 7 then
		cooldown = true
		OkayButton.Text = "Wait 5 minutes..."
		OkayButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
		
		for i = 300, 1, -1 do
			OkayButton.Text = "Wait " .. i .. "s"
			task.wait(1)
		end
		
		OkayButton.Text = "Okay"
		OkayButton.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
		clickCount = 0
		cooldown = false
		return
	end
	
	-- Check detection
	if CheckIfDisabled() then
		TweenService:Create(MainFrame, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
		TweenService:Create(Overlay, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
		for _, obj in pairs(MainFrame:GetChildren()) do
			if obj:IsA("TextLabel") or obj:IsA("TextButton") then
				TweenService:Create(obj, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
			end
		end
		task.wait(0.35)
		Blur:Destroy()
		ScreenGui:Destroy()
		print("Okay clicked - Passed detection!")
	else
		Warning.Visible = true
		Warning.TextTransparency = 1
		TweenService:Create(Warning, TweenInfo.new(0.3), {TextTransparency = 0}):Play()
	end
end)		end
	end
end)

